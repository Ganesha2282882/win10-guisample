<Page
    x:Class="Win10Poc.Windows.Page4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Win10Poc.Windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <Button x:Name="PinTileButton" Content="Tűzz ki csempeként!" Tapped="PinTileButton_Tapped" HorizontalAlignment="Stretch"></Button>
            <Button x:Name="UpdateTileButton" Content="Frissíts!" Tapped="UpdateTileButton_Tapped" HorizontalAlignment="Stretch"></Button>
        </StackPanel>
        <Button x:Name="BackButton" Content="Vissza" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" Tapped="BackButton_Tapped"></Button>
    </Grid>
</Page>
